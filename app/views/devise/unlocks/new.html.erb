<div class="row">
	<div class="span3.75">
		<%= simple_form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }, html: {class: "well"}) do |f| %>
		<%= devise_error_messages! %>
		<fieldset>
		<legend>Resend unlock instructions</legend>
		<%= f.input :email %>
		<%= f.button :submit, "Reset unlock instructions" %>
		</fieldset>
		<% end %>

		<%= render "devise/shared/links" %><br />
	</div>
</div>
