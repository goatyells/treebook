<div class="row">
  <div class="span3.75-fixed">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, html: {class: "well"}) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
      <legend>Edit <%= resource_name.to_s.humanize %></legend>
      <%= f.input :email %>
      <%= f.input :password, :autocomplete => "off", hint: "(leave blank if change not wanted)" %><br />
      <%= f.input :password_confirmation %>
      <%= f.input :current_password, hint: "(required to confirm changes)" %><br />
      <%= f.button :submit, "Update" %>
      </fieldset><br /><br />
      <fieldset>
      <legend>Cancel <%= resource_name.to_s.humanize %></legend>
      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
      </fieldset>
    <% end %>
    <%= link_to "Back", :back %><br />
  </div>
</div>
<br />