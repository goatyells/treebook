<div class="row">
	<div class="span3.75">
		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, html: {class: "well"}) do |f| %>
		<%= devise_error_messages! %>
		<fieldset>
		<legend>Forgot your password?</legend>
		<%= f.input :email %>

		<%= f.button :submit, "Send password reset instructions" %>
		</fieldset>
		<% end %>
		
		<%= render "devise/shared/links" %><br />
	</div>
</div>
